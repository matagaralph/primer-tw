
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum UserRole {
  ADMIN
  OWNER
  ISSUER
}

enum VoucherStatus {
  ACTIVE
  USED
  EXPIRED
}

enum ClaimStatus {
  PENDING
  ISSUED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(OWNER)
  companyId Int?     @map("company_id")
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String
  logo      String?
  users     User[]
  campaigns Campaign[]
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("companies")
}

model Campaign {
  id             Int       @id @default(autoincrement())
  companyId      Int       @map("company_id")
  title          String
  startDate      DateTime  @map("start_date")
  endDate        DateTime  @map("end_date")
  minPoints      Int       @default(1) @map("min_points_per_voucher")
  spendPerPoint  Decimal   @map("spend_per_point") @db.Decimal(10, 2)
  description    String?   @map("description")
  company        Company   @relation(fields: [companyId], references: [id])
  rewards        Reward[]
  vouchers       Voucher[]
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("campaigns")
}

model Reward {
  id             Int      @id @default(autoincrement())
  campaignId     Int      @map("campaign_id")
  title          String
  requiredPoints Int      @map("required_points")
  campaign       Campaign @relation(fields: [campaignId], references: [id])
  claims         Claim[]
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("rewards")
}

model Shopper {
  id          Int       @id @default(autoincrement())
  name        String?   
  phoneNumber String    @unique @map("phone_number")
  points      Int       @default(0) // Total accumulated points logic handled via aggregation or running total
  claims      Claim[]
  vouchers    Voucher[] // Vouchers claimed by this shopper
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("shoppers")
}

// The "Points Voucher" generated by Owner for Shopper to scan
model Voucher {
  id          Int           @id @default(autoincrement())
  campaignId  Int           @map("campaign_id")
  code        String        @unique // 12-char alpha-numeric
  pointsValue Int           @map("points_value")
  status      VoucherStatus @default(ACTIVE)
  shopperId   Int?          @map("shopper_id") // Null until scanned/claimed by shopper
  campaign    Campaign      @relation(fields: [campaignId], references: [id])
  shopper     Shopper?      @relation(fields: [shopperId], references: [id])
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("vouchers")
}

// The "Reward Voucher" generated when points are sufficient
model Claim {
  id        Int         @id @default(autoincrement())
  rewardId  Int         @map("reward_id")
  shopperId Int         @map("shopper_id")
  code      String      @unique
  status    ClaimStatus @default(PENDING)
  issuedAt  DateTime?   @map("issued_at")
  reward    Reward      @relation(fields: [rewardId], references: [id])
  shopper   Shopper     @relation(fields: [shopperId], references: [id])
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  @@map("claims")
}